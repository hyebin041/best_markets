<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".MarketList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/gwang_market_view_first"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="광장시장\n 시장소개"
                android:textSize="20dp"
                android:fontFamily="@values/im_hyemin_bold"/>
            <Button
                android:id="@+id/gwangbtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:text="enter"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/nam_market_view_first"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="남대문시장\n 시장소개"
                android:textSize="20dp"
                android:fontFamily="@values/im_hyemin_bold"/>
            <Button
                android:id="@+id/nambtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:text="enter"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/mang_market_view_first"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="망원시장\n 시장소개"
                android:textSize="20dp"
                android:fontFamily="@values/im_hyemin_bold"/>
            <Button
                android:id="@+id/mangbtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:text="enter"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>