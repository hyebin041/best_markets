<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:padding="10dip"
        >

        <ViewFlipper
            android:id="@+id/image_slide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/market_view_first" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@mipmap/market_view_second"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/market_view_third" />

        </ViewFlipper>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:id="@+id/startBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:text="사진 보기"
                android:fontFamily="@values/im_hyemin_bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/stopBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="정지"
                android:fontFamily="@values/im_hyemin_bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Alignment는 가운데 정렬//-->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp"
            android:maxLines="4"
            android:fontFamily="@values/im_hyemin_bold"
            android:textSize="23dp"
            android:textAlignment="center"
            android:text="망원시장 \n시장소개:#야시장#복잡함" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:background="@drawable/edge">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:fontFamily="@values/im_hyemin_bold"
            android:text="망원시장 가게 목록" />
    </LinearLayout>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/store_border">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/noodle_soup"
                    android:text="홍두깨 칼국수"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#CCE1FF"
                    android:fontFamily="@values/im_hyemin_bold"
                    android:text="1.홍두깨 칼국수\n"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/store_border">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:text="큐스 닭강정"
                    android:id="@+id/img2"
                    android:src="@mipmap/chicken"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#CCE1FF"
                    android:fontFamily="@values/im_hyemin_bold"
                    android:text="2.큐스 닭강정"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/store_border">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:text="우이락"
                    android:src="@mipmap/wuerak"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#CCE1FF"
                    android:fontFamily="@values/im_hyemin_bold"
                    android:text="3.우이락"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:background="@drawable/store_border">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:id="@+id/img4"
                    android:text="망원고로케"
                    android:src="@mipmap/croquette"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#CCE1FF"
                    android:fontFamily="@values/im_hyemin_bold"
                    android:text="4.망원 고로케"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/store_border">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:text="오복수산시장"
                    android:src="@mipmap/fish"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="260dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#CCE1FF"
                    android:fontFamily="@values/im_hyemin_bold"
                    android:text="5.오복 수산시장"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>


